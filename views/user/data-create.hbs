<form action="/user/data-create" method="POST">
  <label>
    Name:
    <input type="text" name="name" />
  </label>
  <br />
  <label>
    Email
    <input type="email" name="email" placeholder="Your email" />
  </label>
  <br />
  <label for="password">Password:
    <input type="password" name="password" />
  </label>
  <br />
  <label>
    Phone number:
    <input type="text" name="phoneNumber" />
  </label>
  <br />
  <fieldset>
    <legend>Biometrics</legend>
    <label>Height (cm):<input type="number" name="height" /></label><br />
    <label>Weight (kg):<input type="number" name="weight" /></label><br />
  </fieldset>
  <br />
  <label>
    Objective:
    <select name="objective">
      <option disable selected value="">- Select one</option>
      <option value="Weight Loss">Weight Loss</option>
      <option value="Improve Health">Improve Health</option>
      <option value="Gain weight">Gain weight</option>
    </select>
  </label>
  <br />

  <button type="submit">Submit</button>
</form>