<h2>Edit the routine: {{routine._id}}</h2>

<form action="/trainer/routine-edit" method="POST">

<fieldset>
    <label>Body Part: <input 
    type="text"
    name= "bodyPart"
    value= "{{routine.bodyPart}}"
    /></label>
<br>
    <label>Day: <input 
    type="number"
    name= "day"
    value= "{{routine.day}}"
    /></label>
<br>

{{#each routine.exercises}}
<label>Name: <input 
    type="text"
    name= "name"
    value= "{{this.name}}"
    /></label>

<label>Repetitions: <input 
    type="number"
    name= "repetitions"
    value= "{{this.repetitions}}"
    /></label>
{{/each}}

<br>
<label>
    Lenght: 
    <input type="text" name="length" placeholder="Minutes" />
</label>
<br>
<label>
    Difficulty
    <select name="difficulty">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Advanced">Advanced</option>
    </select>
</label>
<br>
<button type="submit">Create</button>
</form>
</div>


</fieldset>
</form>



