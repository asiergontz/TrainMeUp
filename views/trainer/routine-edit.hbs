<form action="/trainer/routine-edit/{{routineToEdit.id}}" method="POST">
  <div class="space-y-12">
  
      <h2 class="text-base font-semibold leading-7 text-sky-600">Edit the
        routine:
        {{routineToEdit.routineName}}</h2>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mx-10" >
        <div class="sm:col-span-2">
          <label
            for="routineName"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Routine Name</label>
          <div class="mt-2">
            <div
              class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md"
            >
              <input
                type="text"
                name="routineName"
                id="routineName"
                value="{{routineToEdit.routineName}}"
                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 pl-2"
              />
            </div>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label
            for="bodyPart"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Body Part</label>
          <div class="mt-2">
            <div
              class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md pl-2"
            >
              <input
                type="text"
                name="bodyPart"
                id="bodyPart"
                value="{{routineToEdit.bodyPart}}"
                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 pl-2"
              />
            </div>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label
            for="daysPerWeek"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Days per week</label>
          <div class="mt-2">
            <div
              class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md pl-2"
            >
              <input
                type="text"
                name="daysPerWeek"
                id="daysPerWeek"
                value="{{routineToEdit.daysPerWeek}}"
                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 pl-2"
              />
            </div>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label
            for="length"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Length</label>
          <div class="mt-2">
            <div
              class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md pl-2"
            >
              <input
                type="text"
                name="length"
                id="length"
                value="{{routineToEdit.length}}"
                class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 pl-2"
              />
            </div>
          </div>
        </div>
        <div class="sm:col-span-2">
          <label
            for="equipment"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Equipment</label>
          <div class="mt-2">
            <select
              id="equipment"
              name="equipment"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6 pl-2"
            >
              <option> {{routineToEdit.equipment}}</option>
              <option value="No equipment">No equipment</option>
              <option
                value="Dumbbells/Kettlebells"
              >Dumbbells/Kettlebells</option>
              <option value="Bands">Bands</option>
              <option value="Barbell">Barbell</option>
            </select>
          </div>
        </div>

        <div class="sm:col-span-2">
          <label
            for="equipment"
            class="block text-sm font-medium leading-6 text-gray-900"
          >Difficulty</label>
          <div class="mt-2">
            <select
              id="difficulty"
              name="difficulty"
              class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6 pl-2"
            >
              <option> {{routineToEdit.difficulty}}</option>
              <option value="Beginner">Beginner</option>
              <option value="Intermediate">Intermediate</option>
              <option value="Advanced">Advanced</option>
            </select>
          </div>
        </div>

      </div>

    
        <h2
          class="text-base font-semibold leading-7 text-gray-900 mt-6"
        >Exercises</h2>
        <div class="mt-6 grid grid-cols-3 gap-6 mx-10">
          {{#each routineToEdit.exercises}}
            <div class="bg-white rounded-md shadow-md p-4">
              <div class="text-sm font-medium text-gray-700">Name</div>
              <div class="mt-1 text-center">
                <input
                  type="text"
                  name="exercises[name][]"
                  value="{{this.name}}"
                  class="form-input w-full text-center sm:text-sm sm:leading-5 pl-2"
                />
              </div>
              <div
                class="text-sm font-medium text-gray-700 mt-4"
              >Repetitions</div>
              <div class="mt-1 text-center">
                <input
                  type="text"
                  name="exercises[repetitions][]"
                  value="{{this.repetitions}}"
                  class="form-input w-full text-center sm:text-sm sm:leading-5 pl-2"
                />
              </div>
            </div>
          {{/each}}
        </div>
        <div class="flex-col justify-center">
        
            <h2 class="text-base font-semibold leading-7 text-gray-900 mt-8">Add
              new exercises</h2>

            <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mx-6">
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900"
                >Name</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[name][]"
                    id="exercises-name"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900"
                >Repetitions</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[repetitions][]"
                    id="exercises-repetitions"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
            </div>
            <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mx-6">
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900"
                >Name</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[name][]"
                    id="exercises-name"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900"
                >Repetitions</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[repetitions][]"
                    id="exercises-repetitions"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mx-6">
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900"
                >Name</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[name][]"
                    id="exercises-name"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
              <div class="sm:col-span-3 mx-8">
                <label
                  class="block text-sm font-medium leading-6 text-gray-900 mx-6"
                >Repetitions</label>
                <div class="mt-2">
                  <input
                    type="text"
                    name="exercises[repetitions][]"
                    id="exercises-repetitions"
                    class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
                  />
                </div>
              </div>
            </div>

          
         
          <div class="col-span-full">

            <h2
              class="m-6 text-base font-semibold leading-7 text-gray-900"
            >Notes</h2>

            <div class="mt-2 mx-12">
              <textarea
                id="notes"
                name="notes"
                rows="3"
                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pl-2"
              ></textarea>
            </div>

      
        
    

      <div class="mt-6 flex items-center justify-end gap-x-6">
        <button
          type="submit"
          class="bg-gradient-to-r from-teal-400 to-sky-500 hover:from-orange-500 hover:to-yellow-500 rounded-md px-3 py-2 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600 mt-6 px-8 py-2"
        >Save</button>
   
        </div>
  </div>
</form>