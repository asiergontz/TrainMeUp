<h1>CLIENT DETAILS</h1>

<section id="personal-data">
  <h2>Personal information</h2>
  <ul>
    <li>Name: {{clientDetails.name}}</li>
    <li>Height: {{clientDetails.biometrics.height}}</li>
    <li>Weight: {{clientDetails.biometrics.weight}}</li>
    <li>Objective: {{clientDetails.objective}}</li>
  </ul>

  <h2>Routines</h2>

{{#each clientDetails.routines}}
 
    <li>Body part: {{this.bodyPart}}</li> 
    <li>Day: {{this.day}}</li> 
    <li><a href="/trainer/client-details/{{this._id}}">Delete routine</a> </li> 

{{/each}}