<h1>User Dashboard</h1>
<section id="personal-data">
  <h2>Personal information</h2>
  <ul>
    <li>Name: {{user.name}}</li>
    <li>Height:{{user.biometrics.height}}</li>
    <li>Weight:{{user.biometrics.weight}}</li>
    <li>Objective:{{user.objective}}</li>

  </ul>
  <a href="/user/data-create">Complete my personal data</a>
  <span>|</span>
  <a href="/user/data-update">Update my personal data</a>
</section>
<section id="routines">
  <h2>Routines</h2>
  {{#if routines}}
    <ul>
      {{#each routines}}
        <li>{{this.bodyPart}} - {{this.length}}</li>
        <a href="/user/routine-details/{{this._id}}">View details</a>
      {{/each}}
    </ul>
  {{else}}
    <p>You don't have any routines yet.</p>
  {{/if}}
</section>
{{! Test }}
<a href="/user/routine-details">View details</a>