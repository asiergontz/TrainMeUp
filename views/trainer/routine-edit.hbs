<h2>Edit the routine: {{routine._id}}</h2>

<form action="/trainer/routine-edit" method="POST">

    <label>Body Part: <input 
    type="text"
    name= "bodyPart"
    value= "{{routineToEdit.bodyPart}}"
    /></label>
<br>
    <label>Day: <input 
    type="number"
    name= "day"
    value= "{{routineToEdit.day}}"
    /></label>
<br>

{{#each routineToEdit.exercises}}
    <label>Name: <input 
    type="text"
    name= "name"
    value= "{{this.name}}"
    /></label>

    <label>Repetitions: <input 
    type="number"
    name= "repetitions"
    value= "{{this.repetitions}}"
    /></label>
    <br>
{{/each}}
<br>
<label>
    Lenght: 
    <input type="text" name="length" value="{{routineToEdit.length}}" />
</label>
<br>
<label>
    Difficulty
    <select name="difficulty" value="routineToEdit.difficulty">
    <option value="Beginner">Beginner</option>
    <option value="Intermediate">Intermediate</option>
    <option value="Advanced">Advanced</option>
    </select>
</label>
<br>
<button type="submit">Edit routine</button>
</form>
</div>



