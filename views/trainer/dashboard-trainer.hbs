<h1 class="text-2xl font-bold">Trainer Dashboard</h1>

<section id="clients" class="my-8">
  <h2 class="text-lg font-semibold mb-4">Client List</h2>
  <ul class="space-y-4">
    {{#each user}}
      <li class="flex items-center">
        <img
          src="{{this.profilePic}}"
          alt="{{this.name}}"
          class="w-10 h-10 rounded-full mr-4"
        />
        <div>
          <h3 class="text-lg font-semibold">
            <a
              href="/trainer/client-details/{{this._id}}"
            >{{this.name}}</a></h3>
          <p class="text-gray-600">{{this.objective}}</p>
        </div>
      </li>
      <div>

      </div>
    {{/each}}
  </ul>
</section>

<a
  href="/trainer/client-registration"
  class="text-indigo-600 underline mt-4"
>Add Client</a>