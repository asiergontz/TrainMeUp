<h1 class="text-2xl font-bold mt-8 text-sky-900">
  {{trainer.name}}'s Dashboard</h1> 

<section id="clients" class="my-8 mx-8">
  <h2 class="text-lg text-sky-700 font-semibold mb-4">My Clients </h2>
  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
    {{#each user}}
      <div class="bg-white shadow-md rounded-md p-6">
        <h3 class="text-lg font-semibold">
          <a href="/trainer/client-details/{{this._id}}">
            {{this.name}}
          </a>
        </h3>
        <p class="text-gray-600">{{this.objective}}</p>
      </div>
    {{/each}}
  </div>
</section>

<a
  href="/trainer/client-registration"
  class="bg-gradient-to-r from-teal-400 to-sky-500 hover:from-orange-500 hover:to-yellow-500 rounded-md px-3 py-2 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600 mt-6 px-6 py-4"
>
  Add Client
</a>